@media screen and (max-width: 1023px)

  //-------------------------header----------------------
    
  .main-header
    min-height 80px

  .menu-open
    display block
    
  .open-nav
    position fixed
    left -100vw
    align-items flex-start
    margin-top 80px
    transition all 0.3s

    &--active
      transform translateX(100vw)
    
  .main-menu
    flex-direction column
    min-width 50vw
    background-color #DCDCDC
    
    &__item
      width 100%
      min-height 60px
      transition all 0.3s
    
    &__item + &__item
      margin-left 0
      
    &__item:hover
      background-color #99CCCC
      
    &__link
      display flex
      justify-content center
      align-items center
      width 100%
      min-height 60px
    
  .main-nav
    width 100%
    max-width 100%

  .header-container
    flex-direction column
    
  .logo
    position fixed
    top 25px
    right 25px
    
  //----------------------main-caption------------------
    
  .main-caption
    padding-top 80px

    &__header
      font-size 50px
    
  //----------------------about-------------------------
      
  .about-info
    flex-wrap wrap
    justify-content space-around
    
    &__item
      margin-bottom 30px
      
@media screen and (max-width: 767px)

  //----------------------header------------------
  .main-caption__header
    margin-top 100px
  
  .all-button
    padding 10px
    font-size 15px
    
  //----------------------blog------------------
  .post
    flex-direction column
    align-items center
    
    &__img
      max-width 570px
      width 100%
      
    &__desc
      padding 20px
      max-width 570px
      width 100%
      
    &--order &__desc 
      order 1
      
  .post + .button-container
    margin-top 30px
  
  //----------------------contacts------------------
  .contact-block
    min-height 230px

  .feedback__login
    margin-bottom 20px
    width 100%
    
  .feedback__entry
    padding 15px 10px
    
  .feedback__btn
    width 170px
    height 60px


    
@media screen and (max-width: 479px)

  .main-menu
    width 100vw
    
  .button-more
    min-height 60px
    font-size 17px
    
  .main-caption
    min-height 740px  

    &__header
      margin-top 50px
      font-size 40px
    
    &__subtitle
      font-size 18px
    